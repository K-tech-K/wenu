<% if menus.any? %>
  <ul class="list-unstyled mt-2">
    <% menus.each do |menu| %>
      <li class="d-flex">
        <div>
          <div>
            <p><%= link_to menu.content.to_s + " [ " + menu.price.to_s + "円 (税込) ]", menu %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>